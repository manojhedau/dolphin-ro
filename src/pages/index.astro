<script>
import { gsap } from 'gsap';
  const hero = document.getElementById("hero");
  const rippleContainer = document.getElementById("ripple");

  hero.addEventListener("mousemove", (e) => {
    const ripple = document.createElement("div");
    const x = e.clientX - hero.getBoundingClientRect().left;
    const y = e.clientY - hero.getBoundingClientRect().top;

    ripple.className = "absolute w-32 h-32 bg-white opacity-20 rounded-full pointer-events-none";
    ripple.style.left = `${x - 64}px`;
    ripple.style.top = `${y - 64}px`;

    rippleContainer.appendChild(ripple);

    gsap.fromTo(ripple,
      {
        scale: 0,
        opacity: 0.4
      },
      {
        scale: 2.5,
        opacity: 0,
        duration: 1,
        ease: "power2.out",
        onComplete: () => ripple.remove()
      }
    );
  });
</script>
