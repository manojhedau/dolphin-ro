---
import { databases } from '../lib/appwrite';

import Layout from "../components/Layout.astro";

export async function getStaticPaths() {
  const res = await databases.listDocuments(
    '68176b650023c14fe1cf',         
    '68176bb60008c8629f3e'      
  );

  return res.documents.map(doc => ({
    params: { id: doc.$id },
    props: { product: doc }
  }));
}

const { product } = Astro.props;

---


<Layout>
   <!-- Main Section -->
  <main class="max-w-6xl mx-auto px-4 md:px-10 py-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">

      <div class="border border-blue-100 p-4 rounded-md w-full flex justify-center items-center">
        <img src={`${product.image_url.replace('&mode=admin', '')}`}
             alt={product.name}
             class=" w-1/2">
      </div>

      <div>
        <h2 class="text-2xl font-bold mb-2">{product.name}</h2>
        <p class="text-xl text-blue-600 font-semibold mb-4">â‚¹{new Intl.NumberFormat('en-IN', {maximumFractionDigits: 2}).format(product.price)}</p>
        <p class="text-gray-600 mb-6">{product.description}</p>

        <ul class="space-y-2 list-none text-gray-700 mb-6 ">
            {
                product.features.map((feature) => (
                    <li class="flex gap-2"><span><ion-icon name="checkmark-outline" class="text-xl text-blue-600 font-bold size-6"></ion-icon></span>{feature}</li>
                ))
            }
        </ul>

        <div class="flex gap-4 flex-col md:flex-row items-center">
          <a href={`https://wa.me/8140651390?text=I%27m%20interested%20in%20${product.name}`}
             target="_blank"
             class="flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white px-4 py-3 rounded-md transition w-full md:w-auto  justify-center">
            <ion-icon name="logo-whatsapp" class="text-xl"></ion-icon>
            <span>Contact on WhatsApp</span>
          </a>
            <a href="tel:8140651390" class="bg-blue-600 text-white font-semibold px-6 py-3 rounded-md hover:bg-blue-700 transition duration-300 w-full md:w-auto text-center">
                Contact Us
            </a>
        </div>
      </div>
    </div>
  </main>


</Layout>
